# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_ANON_KEY=your_supabase_anon_key

# AI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview
EMBEDDING_MODEL=text-embedding-3-small

# WhatsApp Configuration
WHATSAPP_SESSION_NAME=gurbani-guide-session
WHATSAPP_WEBHOOK_URL=your_webhook_url_if_using_business_api

# Security
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cache Configuration
REDIS_URL=your_redis_url_if_using_cache
CACHE_TTL=3600

# API Keys for external services
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_if_needed
